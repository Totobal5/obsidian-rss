{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
  "module": "ESNext",
  "moduleResolution": "node",
  "verbatimModuleSyntax": true,
  "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots" : [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "../node_modules"
  ],
  "include": [
  "./**/*.ts",
  "./**/*.d.ts"
  ]
}
